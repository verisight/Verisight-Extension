{
  "name": "Verisight",
  "description": "Verisight is a browser extension that helps you to verify the authenticity of the news you read on the internet.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "cookies"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "WhiteLogo.png",
    "32": "WhiteLogo.png",
    "48": "WhiteLogo.png",
    "128": "WhiteLogo.png"
  }
}